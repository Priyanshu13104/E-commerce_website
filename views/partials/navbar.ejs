<nav class="bg-black text-white shadow-lg">
  <div class="max-w-7xl mx-auto px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo Area -->
      <div class="flex items-center">
        <span class="text-2xl font-bold tracking-wider hover:text-gray-300 transition-colors duration-300">
          E-Commerce
        </span>
      </div>

      <!-- Navigation Links -->
      <div class="flex items-center space-x-8">
        <a href="/" class="relative group">
          <span class="text-gray-300 hover:text-white transition-colors duration-300">Home</span>
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-white transition-all duration-300 group-hover:w-full"></span>
        </a>
        <a href="/products" class="relative group">
          <span class="text-gray-300 hover:text-white transition-colors duration-300">Products</span>
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-white transition-all duration-300 group-hover:w-full"></span>
        </a>
        <a href="/cart" class="relative group">
          <span class="text-gray-300 hover:text-white transition-colors duration-300">Cart</span>
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-white transition-all duration-300 group-hover:w-full"></span>
        </a>

        <% if (user && user.isAdmin) { %>
          <!-- Admin Dashboard (visible only for admin users) -->
          <a href="/admin" class="relative group">
            <span class="text-gray-300 hover:text-white transition-colors duration-300">Admin Dashboard</span>
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-white transition-all duration-300 group-hover:w-full"></span>
          </a>
        <% } %>

        <!-- Authentication Links -->
        <div class="flex items-center space-x-4">
          <% if (!user) { %>
            <!-- If the user is not logged in -->
            <a href="/auth/login" class="px-4 py-2 border border-white text-white rounded-md hover:bg-white hover:text-black transition-all duration-300">
              Sign In
            </a>
            <a href="/auth/register" class="px-4 py-2 bg-white text-black rounded-md hover:bg-gray-200 transition-all duration-300">
              Sign Up
            </a>
          <% } else { %>
            <!-- If the user is logged in -->
            <a href="/auth/logout" class="px-4 py-2 border border-white text-white rounded-md hover:bg-white hover:text-black transition-all duration-300">
              Logout
            </a>
            <span class="text-gray-300">Welcome, <%= user.name %></span>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</nav>
